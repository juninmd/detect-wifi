<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_title"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hidden Camera Surface for Intruder Snap -->
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:alpha="0">
                <TextureView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <!-- DUAL STATUS DASHBOARD (Quick View) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- HOME SECURITY STATUS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHomeStatus"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:strokeColor="#33FFFFFF"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/ivHomeStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_status_inactive"
                            app:tint="@color/primary_color"/>
                        <TextView
                            android:id="@+id/tvHomeStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_home_idle"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_wifi_monitor"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- MOBILE SECURITY STATUS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMobileStatus"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:strokeColor="#33FFFFFF"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/ivMobileStatus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:tint="@color/primary_color"/>
                        <TextView
                            android:id="@+id/tvMobileStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_phone_idle"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status_anti_theft"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <!-- SECTION: MOBILE SECURITY (Phone) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/section_mobile_security"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Anti-Theft Main Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAntiTheft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_elevated"
                app:rippleColor="@color/primary_color">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/circle_background_soft">
                        <ImageView
                            android:id="@+id/ivAntiTheftIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_lock_idle_lock"
                            app:tint="@color/primary_color"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_anti_theft_guard"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/dark_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvAntiTheftStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_tap_to_arm"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="@color/light_text"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BATTERY INFO (Grouped with Mobile Security now) -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1AFFFFFF"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_idle_charging"
                        app:tint="@color/light_text"/>
                    <TextView
                        android:id="@+id/tvBatteryLevel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="--%"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvBatteryTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="--Â°C"
                        android:textColor="@color/light_text"/>
                    <TextView
                        android:id="@+id/tvBatteryVoltage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- V"
                        android:textColor="@color/light_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: HOME SECURITY (WiFi/Radar) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:text="@string/section_home_security"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

             <!-- MASTER CONTROL (Home Monitor) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startButton"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_start_monitor"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/stopButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_stop_monitor"
                    android:backgroundTint="@color/danger_color"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- WiFi Radar Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnOpenRadarFromGrid"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/primary_vibrant">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_menu_search" app:tint="@color/white"/>
                            <TextView android:id="@+id/tvCountKnown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0" android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" android:textColor="@color/white" android:textStyle="bold"/>
                            <TextView android:id="@+id/tvNamesKnown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_safe_devices" android:textAppearance="@style/TextAppearance.Material3.BodySmall" android:textColor="#E0E0FF" android:maxLines="1" android:ellipsize="end"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Intruder/Unknown Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/card_background_elevated"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/warning_color">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_dialog_alert" app:tint="@color/warning_color"/>
                            <TextView android:id="@+id/tvCountUnknown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0" android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" android:textColor="@color/warning_color" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_threats" android:textAppearance="@style/TextAppearance.Material3.BodySmall" android:textColor="@color/light_text"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Cameras Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnSecuritySettings"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/card_background_elevated">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_camera" app:tint="@color/primary_color"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/btn_cameras" android:textColor="@color/dark_text" android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- History Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnOpenHistory"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/card_background_elevated">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_recent_history" app:tint="@color/primary_color"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/btn_history" android:textColor="@color/dark_text" android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <!-- Quick Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/section_quick_settings"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/light_text" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_background_elevated">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_preferences" app:tint="@color/light_text"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:text="@string/btn_settings" android:textColor="@color/light_text"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" android:rotation="0" app:tint="@color/light_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

             <!-- Logs Section -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbNotifyPresence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Notifications"
                android:textColor="@color/light_text"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/section_activity_log"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/light_text" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background_elevated"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_color">

                <ScrollView
                    android:id="@+id/logScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <TextView
                        android:id="@+id/detectionLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/log_waiting"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/light_text"
                        android:fontFamily="monospace" />
                </ScrollView>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacer -->
            <Space android:layout_width="match_parent" android:layout_height="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- SOS PANIC BUTTON (Floating Bottom) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnPanic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#D32F2F"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_lock_power_off"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/btn_panic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- APP LOCK OVERLAY -->
    <FrameLayout
        android:id="@+id/lockOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF121212"
        android:elevation="100dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="@color/primary_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/title_app_locked"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/msg_auth_required"
                android:textColor="@color/light_text"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnlockApp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/btn_unlock_app"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
