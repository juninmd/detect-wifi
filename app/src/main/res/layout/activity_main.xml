<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_title"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hidden Camera Surface for Intruder Snap -->
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:alpha="0">
                <TextureView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <!-- GLOBAL STATUS DASHBOARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background_elevated">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivGlobalStatus"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_lock_idle_lock"
                        app:tint="@color/light_text"/>

                    <TextView
                        android:id="@+id/tvGlobalStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Sistema Ocioso"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textStyle="bold"
                        android:textColor="@color/light_text"/>

                    <TextView
                        android:id="@+id/tvGlobalDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Toque abaixo para ativar"
                        android:textColor="@color/light_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: HOME SECURITY (Unified) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@android:drawable/ic_menu_myplaces"
                app:drawableTint="@color/white"
                android:text="Segurança Residencial"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_elevated">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_background_soft">
                            <ImageView
                                android:id="@+id/ivHomeStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_status_inactive"
                                app:tint="@color/primary_color"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvHomeStatusTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monitoramento WiFi"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/dark_text"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvHomeStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_home_idle"
                                android:textColor="@color/light_text"/>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchHomeMonitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Safe Zone Indicator -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ivSafeZoneBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/success_color"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@android:drawable/ic_lock_lock"
                                app:tint="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ZONA SEGURA"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginVertical="16dp"/>

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/btnOpenRadarFromGrid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">
                            <TextView
                                android:id="@+id/tvCountKnown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dispositivos"
                                android:textSize="12sp"
                                android:textColor="@color/light_text"/>
                        </LinearLayout>

                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:orientation="vertical"
                             android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/tvCountUnknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Desconhecidos"
                                android:textSize="12sp"
                                android:textColor="@color/light_text"/>
                        </LinearLayout>

                         <LinearLayout
                             android:id="@+id/btnQuickScan"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:orientation="vertical"
                             android:gravity="center_horizontal"
                             android:clickable="true"
                             android:focusable="true"
                             android:background="?selectableItemBackground">
                             <ImageView
                                 android:layout_width="28dp"
                                 android:layout_height="28dp"
                                 android:src="@android:drawable/ic_menu_search"
                                 app:tint="@color/primary_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Escanear"
                                android:textSize="12sp"
                                android:textColor="@color/primary_color"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: DEVICE SECURITY (Phone) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@android:drawable/ic_lock_lock"
                app:drawableTint="@color/white"
                android:text="Segurança do Dispositivo"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Anti-Theft + Battery Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAntiTheft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background_elevated"
                app:rippleColor="@color/primary_color">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/circle_background_soft">
                            <ImageView
                                android:id="@+id/ivAntiTheftIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_lock_idle_lock"
                                app:tint="@color/primary_color"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Anti-Roubo"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="@color/dark_text"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvAntiTheftStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_tap_to_arm"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/light_text"/>
                        </LinearLayout>
                         <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@android:drawable/ic_media_play"
                             app:tint="@color/light_text"/>
                    </LinearLayout>

                    <!-- Smart Mode Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="@color/primary_color"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Modo Inteligente (Auto-Armar)"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSmartMode"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"/>
                    </LinearLayout>

                    <!-- Silent Mode Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_lock_silent_mode_off"
                            app:tint="@color/primary_color"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Alarme Silencioso"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchSilentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"/>
                    </LinearLayout>

                     <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginVertical="16dp"/>

                    <!-- Battery Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_lock_idle_charging"
                            app:tint="@color/success_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Bateria: "
                            android:textColor="@color/light_text"/>
                        <TextView
                            android:id="@+id/tvBatteryLevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="--%"
                            android:textColor="@color/dark_text"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvBatteryTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:text="--°C"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>
                        <TextView
                            android:id="@+id/tvBatteryVoltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- V"
                            android:textSize="12sp"
                            android:textColor="@color/light_text"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- Cameras Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnSecuritySettings"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/card_background_elevated">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_camera" app:tint="@color/primary_color"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/btn_cameras" android:textColor="@color/dark_text" android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- History Button -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnOpenHistory"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/card_background_elevated">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_recent_history" app:tint="@color/primary_color"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/btn_history" android:textColor="@color/dark_text" android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Quick Settings -->
             <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_background_elevated">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_preferences" app:tint="@color/light_text"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:text="Configurações Gerais" android:textColor="@color/light_text"/>
                    <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" android:rotation="0" app:tint="@color/light_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logs Section (Simplified) -->
             <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbNotifyPresence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Atividade Recente"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@color/light_text" />

             <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background_elevated"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                 <TextView
                    android:id="@+id/detectionLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Nenhuma atividade recente."
                    android:textColor="@color/light_text"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:fontFamily="monospace"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacer -->
            <Space android:layout_width="match_parent" android:layout_height="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- SOS PANIC BUTTON (Floating Bottom) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnPanic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#D32F2F"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_lock_power_off"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/btn_panic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- APP LOCK OVERLAY -->
    <FrameLayout
        android:id="@+id/lockOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF121212"
        android:elevation="100dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="@color/primary_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/title_app_locked"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/msg_auth_required"
                android:textColor="@color/light_text"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnlockApp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/btn_unlock_app"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
