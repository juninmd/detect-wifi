<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:elevation="0dp"
        android:layout_marginTop="24dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="DRAGON RADAR"
            app:titleCentered="true"
            app:titleTextColor="@color/dragon_radar_green"
            app:subtitleTextColor="@color/dragon_radar_green"
            style="@style/ThemeOverlay.Material3.Dark" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Visual Radar Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:cardBackgroundColor="@color/dragon_radar_bg"
                app:cardCornerRadius="180dp"
                app:cardElevation="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/dragon_radar_green"
                android:layout_marginBottom="24dp">

                <com.example.presencedetector.ui.RadarView
                    android:id="@+id/radarView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- <include layout="@layout/card_device_summary" android:id="@+id/card_summary"/> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="DETECTED SIGNATURES"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/dragon_radar_green"
                android:textStyle="bold" />

            <!-- Devices List Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#80001000"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/dragon_radar_grid">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wifiRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
